<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <info.hoang8f.android.segmented.SegmentedGroup
        android:id="@+id/profile_segment_control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:weightSum="4"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/qr_code"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/profile_tab_qr" />

        <RadioButton
            android:id="@+id/my_profile"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/profile_tab_my_profile" />

        <RadioButton
            android:id="@+id/my_events"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/profile_tab_my_events" />

        <RadioButton
            android:id="@+id/fav_events"
            style="@style/RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/profile_tab_fav_events" />

    </info.hoang8f.android.segmented.SegmentedGroup>


</RelativeLayout>