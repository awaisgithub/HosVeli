<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.od.mma.profile.ProfileMyProfileFragment">


    <ViewSwitcher
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_switcher">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="362dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginTop="50dp">

                <TableRow>

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="10dip"
                        android:text="NAME"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textSize="16sp" />

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:id="@+id/profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="10dip"
                        android:text=""
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="10dip"
                        android:text="EMAIL"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textSize="16sp" />

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:id="@+id/profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:padding="10dip"
                        android:text=""
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="10dip"
                        android:text="NATIONALITY"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textSize="16sp" />

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:id="@+id/profile_nationality"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="10dip"
                        android:text=""
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="10dip"
                        android:text="CONTACT NUMBER"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textSize="16sp" />

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:id="@+id/profile_contact_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="10dip"
                        android:text=""
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="10dip"
                        android:text="ORGANISATION"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textSize="16sp" />

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:id="@+id/profile_organisation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="10dip"
                        android:text=""
                        android:textSize="16sp" />
                </TableRow>

                <TableRow>

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="10dip"
                        android:text="DESIGNATION"
                        android:textColor="@color/QRCodeBlackColor"
                        android:textSize="16sp" />

                    <com.od.mma.Utils.HelveticaNeueTV
                        android:id="@+id/profile_designation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:padding="10dip"
                        android:text=""
                        android:textSize="16sp" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <!--<include layout="@layout/dummy"></include>-->

        <include layout="@layout/profile_my_profile_edit"></include>

    </ViewSwitcher>

    <com.od.mma.Utils.HelveticaNeueTV
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/edit_profile"
        android:text="Edit Profile"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="16sp" />


</RelativeLayout>
