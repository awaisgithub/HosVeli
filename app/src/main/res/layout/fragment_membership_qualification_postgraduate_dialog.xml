<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout_pos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:scrollbars="none">


        <LinearLayout
            android:id="@+id/mainlinear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <com.od.mma.Utils.HelveticaNeueTV
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:gravity="center"
                android:padding="10dp"
                android:text="Degree Info"
                android:textColor="@color/colorTabs"
                android:textSize="@dimen/text_size_signup" />

            <Spinner
                android:id="@+id/id_uni"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:dropDownWidth="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:ems="10"
                android:entries="@array/id_nationality"
                android:padding="10dp"
                android:textSize="@dimen/radio_text"></Spinner>

            <Spinner
                android:id="@+id/id_uni_malaysia"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:dropDownWidth="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:ems="10"
                android:entries="@array/id_nationality"
                android:padding="10dp"
                android:textSize="@dimen/radio_text"></Spinner>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/edit_text_login"
                android:ems="10"
                android:hint="@string/reg_hint_uni"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:padding="10dp"
                android:textSize="@dimen/radio_text"
                android:visibility="gone"/>

            <Spinner
                android:id="@+id/id_bach"
                android:layout_width="match_parent"
                android:layout_gravity="left"
                android:dropDownWidth="fill_parent"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_height="wrap_content"
                android:ems="10"
                android:entries="@array/id_bachelor"
                android:padding="10dp"
                android:textSize="@dimen/radio_text"></Spinner>

            <EditText
                android:id="@+id/date_qualify"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="@drawable/edit_text_login"
                android:ems="10"
                android:hint="@string/reg_hint_qual_date"
                android:focusableInTouchMode="false"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="@dimen/radio_text" />

            <Button
                android:id="@+id/add_button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="@dimen/reg_button_next_back"
                android:layout_marginTop="@dimen/reg_button_next_back"
                android:background="@drawable/reg_submit_button"
                android:text="Add"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
