<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/exhibitor_detail_card_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <com.od.mma.Utils.HelveticaNeueTV
                android:id="@+id/branch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp" />

            <com.od.mma.Utils.HelveticaNeueTV
                android:id="@+id/manager_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/manager"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/colorOrange"
                android:textSize="14sp" />

            <com.od.mma.Utils.HelveticaNeueTV
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/mobile_branch"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.od.mma.Utils.HelveticaNeueTV
                android:id="@+id/fax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/fax"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.od.mma.Utils.HelveticaNeueTV
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/email_branch"
                android:gravity="center"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <com.od.mma.Utils.HelveticaNeueTV
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/address"
                android:gravity="center_vertical"
                android:drawablePadding="8dp"
                android:layout_marginTop="8dp"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>